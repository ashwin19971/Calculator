<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ashwingiri.calculator.MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#000000"
    >

    <TextView
        android:id="@+id/etRes"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingTop="27dp"
        android:text="0"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btAc"
            android:layout_width="77dp"
            android:layout_height="72dp"
            android:layout_margin="5dp"
            android:background="@drawable/round_button"
            android:layout_weight="1"
            android:text="@string/ac"
            android:textSize="22sp" />

        <Button
            android:layout_width="wrap_content"

            android:layout_weight="1"
            android:layout_height="72dp"
            android:layout_margin="5dp"
            android:background="@drawable/round_button"
            android:text="@string/del"
            android:textSize="22sp"
            android:id="@+id/btDel"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_margin="5dp"
            android:text="@string/mod"
            android:textSize="22sp"
            android:layout_weight="1"
            android:id="@+id/btmod"
            android:background="@drawable/round_button"/>

        <Button
            android:id="@+id/btDiv"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/round_button2"
            android:text="รท"
            android:textColor="#ffffff"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"

            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:text="@string/sev"
            android:id="@+id/btSev"
            android:textColor="#ffffff "
            android:background="@drawable/round_button1"
            android:textSize="22sp"
            android:layout_margin="5dp"/>

        <Button
            android:layout_width="wrap_content"
            android:text="8"
            android:textColor="#ffffff "
            android:layout_weight="1"
            android:id="@+id/btEig"
            android:background="@drawable/round_button1"
            android:textSize="22sp"
            android:layout_height="72dp"
            android:layout_margin="5dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textColor="#ffffff "
            android:background="@drawable/round_button1"
            android:id="@+id/btNine"
            android:layout_height="72dp"
            android:text="9"
            android:textSize="22sp"
            android:layout_margin="5dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="*"
            android:textSize="26sp"
            android:layout_height="72dp"
            android:layout_margin="5dp"
            android:background="@drawable/round_button2"
            android:id="@+id/btMul"
            android:textColor="#ffffff"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:text="4"
            android:id="@+id/btFour"
            android:textColor="#ffffff "
            android:background="@drawable/round_button1"
            android:textSize="22sp"
            android:layout_weight="1"
            android:layout_height="72dp"
            android:layout_margin="5dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:textColor="#ffffff "
            android:background="@drawable/round_button1"
            android:layout_weight="1"
            android:text="5"
            android:id="@+id/btFive"
            android:textSize="22sp"
            android:layout_margin="5dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="72dp"
            android:textColor="#ffffff "
            android:background="@drawable/round_button1"
            android:text="6"
            android:id="@+id/btSix"
            android:textSize="22sp"
            android:layout_margin="5dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="72dp"
            android:text="-"
            android:textSize="26sp"
            android:layout_margin="5dp"
            android:textColor="#ffffff"
            android:background="@drawable/round_button2"
            android:id="@+id/btSub"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:text="1"
            android:textColor="#ffffff "
            android:layout_weight="1"
            android:background="@drawable/round_button1"
            android:textSize="22sp"
            android:layout_height="72dp"
            android:layout_margin="5dp"
            android:id="@+id/btOne"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="2"
            android:id="@+id/btTwo"
            android:textSize="22sp"
            android:layout_height="72dp"
            android:layout_margin="5dp"
            android:textColor="#ffffff "
            android:background="@drawable/round_button1"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="3"
            android:id="@+id/btThree"
            android:textSize="22sp"
            android:layout_height="72dp"
            android:layout_margin="5dp"
            android:textColor="#ffffff "
            android:background="@drawable/round_button1"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="72dp"
            android:text="+"
            android:id="@+id/btAdd"
            android:background="@drawable/round_button2"
            android:textSize="26sp"
            android:layout_margin="5dp"
            android:textColor="#ffffff"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"

            android:layout_width="wrap_content"
            android:text="0"
            android:textSize="22sp"
            android:layout_height="72dp"
            android:layout_margin="5dp"
            android:textColor="#ffffff "
            android:id="@+id/btZero"
            android:background="@drawable/round_button1"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="."
            android:textSize="22sp"
            android:layout_height="72dp"
            android:layout_margin="5dp"
            android:textColor="#ffffff "
            android:id="@+id/btPoint"
            android:background="@drawable/round_button1"
            />


        <Button
            android:id="@+id/btEqual"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="2"

            android:background="@drawable/cylindrical_button"
            android:text="="
            android:textColor="#ffffff"
            android:textSize="25sp" />
    </LinearLayout>
</LinearLayout>
