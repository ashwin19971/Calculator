<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:weightSum="7"
    android:background="#000"
    android:orientation="vertical">

    <TextView
        android:layout_weight="2"
        android:textColor="#fff"
        android:text="0"
        android:id="@+id/tvResult"
        android:textSize="30sp"

        android:gravity="right"
        android:paddingRight="10dp"

        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="x²"
            android:textAllCaps="false"
            android:id="@+id/btXsq"
            android:layout_margin="5dp"
            android:background="@drawable/round_button"
            android:layout_weight="1"
            android:textSize="16sp" />
        <Button
            android:text="x^​3"
            android:id="@+id/btX3"
            android:background="@drawable/round_button"
            android:layout_width="0dp"
            android:textAllCaps="false"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="15sp" />
        <Button
            android:id="@+id/bt2x"
            android:text="2^​x"
            android:textAllCaps="false"
            android:layout_width="0dp"
            android:background="@drawable/round_button"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="15sp" />
        <Button
            android:layout_width="0dp"
            android:background="@drawable/round_button"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:id="@+id/btAc"
            android:text="AC"
            android:layout_weight="1"
            android:textSize="16sp" />
        <Button
            android:background="@drawable/round_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:id="@+id/btDel"
            android:text="DEL"
            android:layout_weight="1"
            android:textSize="16sp" />
        <Button
            android:layout_width="0dp"
            android:background="@drawable/round_button"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:id="@+id/btMod"
            android:text="%"
            android:layout_weight="1"
            android:textSize="20sp" />
        <Button
            android:layout_width="0dp"
            android:background="@drawable/round_button_orange"
            android:layout_height="match_parent"
            android:id="@+id/btDiv"
            android:text="÷"
            android:textColor="#ffffff"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:textColor="#fff"
            android:text="e^​x"
            android:id="@+id/btEx"
            android:textAllCaps="false"
            android:background="@drawable/round_button_black"
            android:layout_weight="1"
            android:textSize="14sp" />
        <Button
            android:background="@drawable/round_button_black"
            android:layout_width="0dp"
            android:id="@+id/bt10x"
            android:text="10^​x"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="14sp" />
        <Button
            android:layout_width="0dp"
            android:text="1/x"
            android:id="@+id/bt1x"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:background="@drawable/round_button_black"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="15sp" />
        <Button
            android:layout_width="0dp"
            android:background="@drawable/round_button_black"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="7"
            android:id="@+id/btSev"
            android:textColor="#fff"
            android:textSize="18sp" />
        <Button
            android:background="@drawable/round_button_black"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="8"
            android:id="@+id/btEight"
            android:textColor="#fff"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="18sp" />
        <Button
            android:layout_width="0dp"
            android:background="@drawable/round_button_black"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:text="9"
            android:id="@+id/btNine"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="18sp" />
        <Button
            android:layout_width="0dp"
            android:background="@drawable/round_button_orange"
            android:layout_height="match_parent"
            android:text="X"
            android:id="@+id/btMul"
            android:textColor="#fff"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:id="@+id/btln"
            android:textColor="#fff"
            android:text="ln"
            android:textAllCaps="false"
            android:background="@drawable/round_button_black"
            android:layout_weight="1"
            android:textSize="15sp" />
        <Button
            android:background="@drawable/round_button_black"
            android:layout_width="0dp"
            android:textColor="#fff"
            android:text="log"
            android:id="@+id/btlog"
            android:textAllCaps="false"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="14sp" />
        <Button
            android:layout_width="0dp"
            android:textAllCaps="false"
            android:text="x!"
            android:id="@+id/btxF"
            android:textColor="#fff"
            android:background="@drawable/round_button_black"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="16sp" />
        <Button
            android:layout_width="0dp"
            android:background="@drawable/round_button_black"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="4"
            android:id="@+id/btFour"
            android:textColor="#fff"
            android:layout_weight="1"
            android:textSize="18sp" />
        <Button
            android:background="@drawable/round_button_black"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btFive"
            android:textColor="#fff"
            android:text="5"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="18sp" />
        <Button
            android:layout_width="0dp"
            android:background="@drawable/round_button_black"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="6"
            android:textColor="#fff"
            android:id="@+id/btSix"
            android:layout_weight="1"
            android:textSize="18sp" />
        <Button
            android:layout_width="0dp"
            android:background="@drawable/round_button_orange"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:textColor="#fff"
            android:id="@+id/btSub"
            android:text="-"
            android:layout_weight="1"
            android:textSize="30sp" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:id="@+id/btSqrt"
            android:text="√x"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:background="@drawable/round_button_black"
            android:layout_weight="1"
            android:textSize="15sp" />
        <Button
            android:background="@drawable/round_button_black"
            android:layout_width="0dp"
            android:text="sinh"
            android:id="@+id/btSinh"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="14sp" />
        <Button
            android:text="cosh"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:layout_width="0dp"
            android:id="@+id/btCosh"
            android:background="@drawable/round_button_black"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="14sp" />
        <Button
            android:layout_width="0dp"
            android:text="1"
            android:textColor="#fff"
            android:background="@drawable/round_button_black"
            android:id="@+id/btOne"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="18sp" />
        <Button
            android:background="@drawable/round_button_black"
            android:layout_width="0dp"
            android:text="2"
            android:textColor="#fff"
            android:id="@+id/btTwo"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="18sp" />
        <Button
            android:layout_width="0dp"
            android:background="@drawable/round_button_black"
            android:textColor="#fff"
            android:text="3"
            android:id="@+id/btThree"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="18sp" />
        <Button
            android:layout_width="0dp"
            android:background="@drawable/round_button_orange"
            android:layout_height="match_parent"
            android:text="+"
            android:id="@+id/btAdd"
            android:textColor="#fff"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="22sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:id="@+id/btsin"
            android:text="sin"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:background="@drawable/round_button_black"
            android:layout_weight="1"
            android:textSize="15sp" />
        <Button
            android:background="@drawable/round_button_black"
            android:layout_width="0dp"
            android:textAllCaps="false"
            android:text="cos"
            android:id="@+id/btCos"
            android:textColor="#fff"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="15sp" />
        <Button
            android:layout_width="0dp"
            android:background="@drawable/round_button_black"
            android:layout_height="match_parent"
            android:text="tan"
            android:id="@+id/btTan"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="15sp" />
        <Button
            android:layout_width="0dp"
            android:background="@drawable/round_button_black"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:id="@+id/btZero"
            android:text="0"
            android:textColor="#fff"
            android:layout_weight="1"
            android:textSize="18sp" />
        <Button
            android:background="@drawable/round_button_black"
            android:layout_width="0dp"
            android:text="."
            android:id="@+id/btDecimal"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textAlignment="gravity"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="25sp" />
        <Button
            android:layout_width="0dp"
            android:background="@drawable/cylindrical_button"
            android:layout_height="match_parent"
            android:text="="
            android:id="@+id/btEqual"
            android:textColor="#fff"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:textSize="25sp" />

    </LinearLayout>
</LinearLayout>
